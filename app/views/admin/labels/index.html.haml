- page_title _("Labels")

%div
  = link_to new_admin_label_path, class: "float-right btn btn-nr btn-new" do
    = _('New label')
  %h3.page-title
    = _('Labels')
%hr

.labels
  - if @labels.present?
    %ul.bordered-list.manage-labels-list
      = render @labels
    = paginate @labels, theme: 'gitlab'
  - else
    .card.bg-light
      .nothing-here-block= _('There are no labels yet')

